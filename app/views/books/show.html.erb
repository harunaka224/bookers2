<main>
  <div class="container">
    <div class="row">
      <div class="col-md-3">

      <%=render 'index', book: @book %>

      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td><%= image_tag book.user.get_profile_image(100,100)%>
                  <%= link_to book.user.name, user_path(book.user.id) %>
              </td>
              <td><%= link_to book.title, book_path %></td>
              <td><%= book.body %></td>
              <td><%=link_to "Edit", edit_book_path, class: 'btn btn-sm btn-success ' %></td>
              <td><%=link_to "Destroy", book_path, method: :delete, class: 'btn btn-sm btn-danger', "data-confirm" => "本当に消しますか？" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>

      </div>
    </div>
  </div>
</main>