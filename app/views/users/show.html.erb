<main>
  <div class="container">
    <div class="row">
      <div class="col-md-3">

      <%=render 'books/index', book: @book %>

      </div>
      <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table class="table books">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td></td>
            <td><%= user.book.title %></td>
            <td><%= user.book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
     </div>
    </div>
  </div>
</main>