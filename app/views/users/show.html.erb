<div><%= flash[:notice] %></div>
<main>
  <div class="container">
    <div class="row">
      <div class="col-md-3">

      <%=render 'books/index', book: @book %>

      </div>
      <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table class="table books">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= image_tag book.user.get_profile_image(100,100)%></td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
     </div>
    </div>
  </div>
</main>