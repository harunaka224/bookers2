<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2 class="mt-3">User info</h2>

      <% if @user.errors.any? %>
      <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>

      <%=form_with model:@user do |f| %>
      <div class="pb-3">
        <label for="user_name">Name</label>
        <%= f.text_field :name, size: "50"%>
      </div>
      <div>
        <label for="user_image">Image</label>
      </div>
      <div  class="pb-3">
        <%= f.file_field :profile_image, accept: "image/*" %>
      </div>
      <div>
        <label for="user_introduction">Introduction</label>
        <%= f.text_area :introduction, size: "50"%>
      </div>
      <div>
        <%= f.submit"Update User", class:"btn btn-secondary" %>
      </div>
      <% end %>

    </div>
  </div>
 </div>